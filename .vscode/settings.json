{
  // 开始编辑器展示启动页
  "workbench.startupEditor": "welcomePage",
  // vscode的主题是 vscode-icons
  "workbench.iconTheme": "vscode-icons",
  // 编辑器保存的时候进行格式化
  "editor.formatOnSave": true,
  // 编辑器保存的时候的行为
  "editor.codeActionsOnSave": {
    // 使用eslint进行格式化
    "source.fixAll.eslint": true
  },
  // 编辑器快捷提示
  "editor.quickSuggestions": {
    "strings": true
  },
  // 保存的时候执行eslint
  "eslint.run": "onSave",
  // eslint的选项是 js和vue文件
  "eslint.options": {
    "extensions": [".js", ".vue"]
  },
  "eslint.workingDirectories": ["./{PATH_TO_CLIENT}"],
  // eslint的验证
  "eslint.validate": ["javascriptreact", "vue", "javascript", "html"],
  // 文件管理
  "files.associations": {
    "*.wpy": "vue",
    "*.wxml": "wxml",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.html": "html"
  },
  "files.eol": "\n",
  "docthis.includeDescriptionTag": true,
  // 文件开头的作者名
  "fileheader.Author": "ataola",
  // 文件改动的作者名
  "fileheader.LastModifiedBy": "ataola",
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  // 允许git智能提交
  "git.enableSmartCommit": true,
  // javascript默认使用插件prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // json默认使用插件prettier
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // vue默认使用插件prettier
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // 终端光标显示为线
  "terminal.integrated.cursorStyle": "line"
}
